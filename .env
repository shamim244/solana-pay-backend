MAX_PAYLOAD_SIZE=1mb
TRUST_PROXY=false

# Custom Token Configuration
ALLOW_CUSTOM_TOKENS=true
AUTO_ADD_UNKNOWN_TOKENS=true
TOKEN_METADATA_CACHE_MINUTES=60

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DB_TIMEOUT=5000
HEALTH_CHECK_SOLANA_TIMEOUT=5000

# Development Configuration (only for development)
DEBUG_MODE=false
MOCK_SOLANA_RESPONSES=false
SKIP_BLOCKCHAIN_VALIDATION=false
